#!/bin/bash

# Ensure everything is built using the Makefile
make all || { echo "Build failed"; exit 1; }

# Executable names
CLIENT_EXE="bin/serverProgram"
SERVER_EXE="bin/clientProgram"

# Open new terminals side by side (gnome-terminal example)
gnome-terminal --geometry=80x24+0+0 -- bash -c "./$SERVER_EXE; exec bash"
gnome-terminal --geometry=80x24+800+0 -- bash -c "./$CLIENT_EXE; exec bash"

